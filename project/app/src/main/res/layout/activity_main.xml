<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_start_journey"
        android:id="@+id/btn_start_journey"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_review_journeys"
        android:layout_alignStart="@+id/btn_review_journeys" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_review_journeys"
        android:id="@+id/btn_review_journeys"
        android:layout_below="@+id/btn_start_journey"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/biene"
        android:id="@+id/textView"
        android:layout_above="@+id/btn_review_journeys"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:textSize="100dp" />

</RelativeLayout>
