<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    android:background="@drawable/bg">

    <angelhack.biene.CircleButton
        android:id="@+id/btn_start_journey"
        android:layout_width="260dip"
        android:layout_height="260dip"
        app:cb_color="#33b5e5"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:theme="@style/Theme.AppCompat"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_review_journeys"
        android:id="@+id/btn_review_journeys"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/btn_start_journey"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:theme="@style/Base.V21.Theme.AppCompat.Light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/button_start_journey"
        android:id="@+id/button_start_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:textSize="40dp"
        android:gravity="center"
        android:typeface="serif"
        android:textColor="#ffffffff"
        android:focusable="false" />

</RelativeLayout>
